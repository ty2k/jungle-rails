<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order<% if current_user %>, <%= @order.email %><% end %>!</h4>
  </div>

  <%= render @order %>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-block btn-lg btn-primary' %>

</section>
