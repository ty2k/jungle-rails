<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>In Stock</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= number_to_currency(@product.price) %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <h2><%= pluralize(@product.reviews.count, 'Customer Review') %></h2>
        <% @product.reviews.each do |r| %>
          <div class="well">
            <h3>Review</h3>
            <p>Author: <%= r.user.first_name %> <%= r.user.last_name %></p>
            <p>Description: <%=r.description %></p>
            <p>Rating:
            <% (1..(r.rating)).each do |i| %>
              <%= fa_icon 'star' %>
            <% end %>
            </p>
            <p>Date: <%= r.created_at.to_formatted_s(:long) %></p>
          </div>
        <% end %>
      </div>
    </div>

  </article>

</section>
