<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>In Stock</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= number_to_currency(@product.price) %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
        <h2>Add a Review</h2>
          <%= form_for :review, url: "/products/#{@product.id}/reviews", method: 'POST' do |f| %>

            <div class="field">
              <%= f.label :description %>
              <%= f.text_field(:description, {id: :review_description}) %>
            </div>

            <div class="field">
              <%= f.label :rating %>
              <%= f.select :rating, [['*', 1], ['* *', 2], ['* * *', 3], ['* * * *', 4], ['* * * * *', 5]] %>
            </div>

            <div class="actions">
              <%= f.submit "Submit" %>
            </div>

          <% end %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <h2><%= pluralize(@product.reviews.count, 'Customer Review') %></h2>
        <% @product.reviews.each do |r| %>
          <div class="well">
            <h3>Review</h3>
            <p>Author: <%= r.user.first_name %> <%= r.user.last_name %></p>
            <p>Description: <%=r.description %></p>
            <p>Rating:
            <% (1..(r.rating)).each do |i| %>
              <%= fa_icon 'star' %>
            <% end %>
            </p>
            <p>Date: <%= r.created_at.to_formatted_s(:long) %></p>
            <% if r.user == current_user %>
              <div class="btn btn-warning">
                <%= fa_icon 'trash' %> Delete
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  </article>

</section>
